# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# All values should be set via secrets management (AWS Secrets Manager, Vault, etc.)
# DO NOT commit actual secrets to version control

NODE_ENV=production
PORT=3000
API_PREFIX=api

# CORS (production frontend URLs)
CORS_ORIGINS=https://your-app.com,https://www.your-app.com

# JWT Authentication (MUST use strong secrets)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h

# ===========================================
# DATABASE - PostgreSQL (Production)
# ===========================================
# Use managed database (AWS RDS, Google Cloud SQL, etc.)
DB_HOST=${DB_HOST}
DB_PORT=5432
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_DATABASE=newsfeed_production
DB_SSL=true

# ===========================================
# STORAGE - AWS S3 + CloudFront CDN
# ===========================================
STORAGE_PROVIDER=s3
AWS_REGION=${AWS_REGION}
AWS_S3_BUCKET=${AWS_S3_BUCKET}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
# CloudFront distribution URL for media delivery
CDN_URL=${CLOUDFRONT_URL}

# ===========================================
# REDIS - Production Cluster
# ===========================================
# Use managed Redis (AWS ElastiCache, Redis Cloud, etc.)
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# ===========================================
# MEDIA PROCESSING
# ===========================================
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=209715200
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime

# ===========================================
# ANALYTICS
# ===========================================
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=30000

# ===========================================
# SECURITY
# ===========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
HELMET_ENABLED=true

# ===========================================
# MONITORING (Optional)
# ===========================================
# SENTRY_DSN=${SENTRY_DSN}
# NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
