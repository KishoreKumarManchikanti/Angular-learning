# ===========================================
# STAGING ENVIRONMENT CONFIGURATION
# ===========================================
# These values should be set in your CI/CD or hosting platform

NODE_ENV=staging
PORT=3000
API_PREFIX=api

# CORS (update with your staging frontend URL)
CORS_ORIGINS=https://staging.your-app.com

# JWT Authentication (use strong secrets in staging)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d

# ===========================================
# DATABASE - PostgreSQL (Staging)
# ===========================================
DB_HOST=${DB_HOST}
DB_PORT=5432
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_DATABASE=newsfeed_staging
DB_SSL=true

# ===========================================
# STORAGE - AWS S3 (Staging Bucket)
# ===========================================
STORAGE_PROVIDER=s3
AWS_REGION=us-east-1
AWS_S3_BUCKET=${AWS_S3_BUCKET_STAGING}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
# Optional: CloudFront CDN URL
CDN_URL=

# ===========================================
# REDIS - Caching & Sessions
# ===========================================
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# ===========================================
# MEDIA PROCESSING
# ===========================================
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime

# ===========================================
# ANALYTICS
# ===========================================
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=500
ANALYTICS_FLUSH_INTERVAL=10000
