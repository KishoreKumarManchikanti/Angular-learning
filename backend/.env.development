# ===========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env for development

NODE_ENV=development
PORT=3000
API_PREFIX=api

# CORS (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:4200,http://localhost:4000

# JWT Authentication
JWT_SECRET=dev-jwt-secret-change-in-production-123456789
JWT_EXPIRES_IN=7d

# ===========================================
# DATABASE - PostgreSQL
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=newsfeed_dev
DB_SSL=false

# ===========================================
# STORAGE - MinIO (S3-compatible for local dev)
# ===========================================
# For development, we use MinIO which is S3-compatible
# Run: docker-compose up minio
STORAGE_PROVIDER=minio
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=newsfeed-media-dev
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# ===========================================
# REDIS - Caching & Sessions
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# MEDIA PROCESSING
# ===========================================
# Max file sizes in bytes
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
# Allowed mime types
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime

# ===========================================
# ANALYTICS
# ===========================================
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=5000
